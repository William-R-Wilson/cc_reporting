      <ul>
      <% @transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class = "enter_transactions">
<%= form_for(@transaction) do |f| %> 

     <li><div><%= f.label :date %></div><%= f.date_select :date %></li>
     <li><div><%= f.label :vendor %></div><%= f.text_field :vendor, class: "entry" %></li>
     <li><div><%= f.label :who %></div><%= f.text_field :who, class: "entry"  %></li>
     <li><div><%= f.label :what %></div><%= f.text_field :what, class: "entry" %></li>
     <li><div><%= f.label :where %></div><%= f.text_field :where, class: "entry" %></li>
     <li><div><%= f.label :why %></div><%= f.text_field :why, class: "entry" %></li>
     <li><div><%= f.label :amount %></div><%= f.text_field :amount, class: "amount" %></li>
     <li><div><%= f.label :program %></div><%= select(:transaction, :program, options_for_select(@programs)) %></li>
     <li><div><%= f.label :account %></div><%= select(:transaction, :account, options_for_select(@accounts)) %></li>
</div>
  <div class="actions">
    <%= f.submit "Create", class: "submit_button" %>
  </div>
<% end %>
