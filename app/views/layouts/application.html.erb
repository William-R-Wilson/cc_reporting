<!DOCTYPE html>
<html>
<head>
  <title>CC Reporting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id = "navbar">
<ul>

<% if session[:user_id] %>
  <li><%= link_to "All Transactions", transactions_path %> | </li>
  <li><%= link_to "Reports", reports_path %> | </li>
  <li><%= link_to "Logout", logout_path, method: :delete %></li>
<% end %>



</ul>
</div>


<%= yield %>


<div id = "footer">
<ul>
<% if session[:user_id] && User.find_by(id: session[:user_id]).admin? %>
  <li><%= link_to "Users", users_path %> | </li>
  <li><%= link_to "Create a new User", new_user_path %></li>  
<% end %>

</ul>
</div>

</body>
</html>
