<!DOCTYPE html>
<html>
<head>
  <title>CC Reporting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <% stylesheet_link_tag('default', :media => :screen) %>
  <% stylesheet_link_tag('print', :media => :print) %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id = "navbar">
<ul>
<% if session[:user_id] %>
  <li><%= link_to "All Transactions", transactions_path, class: "nav_button" %></li>
  <li><%= link_to "Reports", reports_path, class: "nav_button" %></li>
  <li><%= link_to "Logout", logout_path, method: :delete, class: "nav_button" %></li>

<% end %>
</ul>
</div>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<%= yield %>


<div id = "footer">
<ul>
<% if session[:user_id] %>
  <li><%= link_to 'New Transaction', new_transaction_path, class: "nav_button" %></li>
<% end %>
<% if session[:user_id] && User.find_by(id: session[:user_id]).admin? %>
  <li><%= link_to "Users", users_path, class: "nav_button" %></li>
  <li><%= link_to "Create a new User", new_user_path, class: "nav_button" %></li>  
<% end %>

</ul>
</div>

</body>
</html>
