<% stylesheet_link_tag('default', :media => :screen) %>
<% stylesheet_link_tag('print', :media => :print) %>


<div class = "container">
  <h1>Report dashboard</h1>
  <%= render "list" %>
  <h2>Total of all Transactions:  <%= number_to_currency(@total.sum) %></h2>
  <% @total_by_program.each do |program, total| %>
    <li><%= program[1] + " " + program[0] + ": " + number_to_currency(total) %>
  <% end %>
  <div><%= link_to "Print this page", "#", onclick: "printpage()" %></div>
</div>



