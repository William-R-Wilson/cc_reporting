<div class = "container">
<h1>Reporting</h1>
<%= form_tag("/reports/:user_id", method: "get") do %>
<div class="form">
  <% if User.find_by(id: session[:user_id]).admin? %>
    <%= select_tag(:user_id, options_for_select(@users_to_select)) %><br>
  <% else %>
    <h3><%= "Welcome #{@user.name}!" %></h3><br>
    <%= hidden_field_tag "user_id", @user.id %>
  <% end %>
</div>
<div class="form">  
  Start Date: <%= select_date Date.today.prev_month, prefix: :start_date %><br>
</div>
<div class="form">
  End Date:   <%= select_date Date.today, prefix: :end_date %><br>
</div>
<div class="form">
  <%= submit_tag("See transactions", class: "submit_button") %>
</div>
<% end %>
</div>


