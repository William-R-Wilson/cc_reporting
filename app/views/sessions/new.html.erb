<meta name="viewport" content="width=device-width" />

<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>
<%= form_for(:session, url: login_path) do |f| %>
  <fieldset>
    <legend>Please Log In</legend>
    <div class = "form">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="form">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "Login", class: "submit_button" %>
    </div>
  </fieldset>
<% end %>